<Window x:Class="screenLock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:screenLock"
        mc:Ignorable="d"
		ResizeMode="NoResize"
		Background="LawnGreen"
		Name="lockWindow"
		WindowStyle="None"
		Topmost="True"
		Height="30" 
		Width="30">


	<Grid>


		<Grid.Resources>
			<ImageBrush x:Key="AddButtonImageBrush" ImageSource="icon.ico"/>
		</Grid.Resources>

		<Button TextBlock.TextAlignment="Center" 
					TextBlock.FontStyle="Italic"
					Name="lockButton"
				
					MouseDoubleClick="lockButton_MouseDoubleClick"
					MouseRightButtonDown="lockButton_MouseRightButtonDown"
					Background="{StaticResource AddButtonImageBrush}">



		</Button>



	</Grid>
	
</Window>
